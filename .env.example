# Database Configuration
DB_HOST=your_cpanel_mysql_host
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_PORT=3306

# Database Connection Pool Settings
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_IDLE=10000
DB_QUERY_TIMEOUT=30000

# Application Settings
NODE_ENV=development
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Client API URLs (no trailing slash)
# Mausa client
NEXT_PUBLIC_API_URL_MAUSA=http://localhost/php-api
# Amoud client
NEXT_PUBLIC_API_URL_AMOUD=https://amoud.example.com/api

# Default PHP API base URL (fallback)
NEXT_PUBLIC_PHP_API_BASE_URL=http://localhost/php-api